carEast() {
	turn.wait();
	
	// lightswitch(entry).wait
	mutexE.wait();
	if (nE == 0) {
		entry.wait();
	}
	nE++;
	mutexE.signal();
	
	turn.signal();
	
	// pass
	
	
	// lightswitch(entry).signal
	mutexE.wait();
	nE--;
	if (nE == 0) {
		entry.signal();
	}
	mutexE.signal();
}

